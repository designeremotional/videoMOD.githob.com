    <script>
        // 更新当前日期和时间
        function updateDateTime() {
            const now = new Date();
            // 格式化日期
            const dateOptions = { year: 'numeric', month: '2-digit', day: '2-digit' };
            document.getElementById('current-date').textContent = now.toLocaleDateString('zh-CN', dateOptions);
            
            // 格式化时间
            const timeOptions = { hour: '2-digit', minute: '2-digit', second: '2-digit' };
            document.getElementById('current-time').textContent = now.toLocaleTimeString('zh-CN', timeOptions);
        }
        
        // 初始化时更新一次，并设置定时器每秒更新
        updateDateTime();
        setInterval(updateDateTime, 1000);

        // 初始化所有图表
        document.addEventListener('DOMContentLoaded', function() {
            // 粉丝增长趋势图
            const followerGrowthCtx = document.getElementById('followerGrowthChart').getContext('2d');
            new Chart(followerGrowthCtx, {
                type: 'line',
                data: {
                    labels: ['1月', '2月', '3月', '4月', '5月', '6月'],
                    datasets: [
                        {
                            label: '抖音',
                            data: [185000, 198000, 210000, 225000, 237000, 245000],
                            borderColor: '#000000',
                            backgroundColor: 'rgba(0, 0, 0, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: '微信视频号',
                            data: [98000, 105000, 112000, 118000, 123000, 128000],
                            borderColor: '#07C160',
                            backgroundColor: 'rgba(7, 193, 96, 0.1)',
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: '快手',
                            data: [152000, 159000, 165000, 172000, 178000, 183000],
                            borderColor: '#00C6FF',
                            backgroundColor: 'rgba(0, 198, 255, 0.1)',
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: false,
                            grid: {
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // 平台数据对比图
            const platformComparisonCtx = document.getElementById('platformComparisonChart').getContext('2d');
            new Chart(platformComparisonCtx, {
                type: 'bar',
                data: {
                    labels: ['粉丝数', '月增长', '作品数', '平均播放量', '互动率'],
                    datasets: [
                        {
                            label: '抖音',
                            data: [245000, 12000, 186, 520000, 4.8],
                            backgroundColor: '#000000'
                        },
                        {
                            label: '微信视频号',
