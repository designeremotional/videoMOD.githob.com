                            backgroundColor: '#07C160'
                        },
                        {
                            label: '快手',
                            data: [183000, 9500, 215, 450000, 4.2],
                            backgroundColor: '#00C6FF'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'top',
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                drawBorder: false
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });

            // 互动类型占比图
            const interactionTypeCtx = document.getElementById('interactionTypeChart').getContext('2d');
            new Chart(interactionTypeCtx, {
                type: 'doughnut',
                data: {
                    labels: ['点赞', '评论', '分享', '收藏'],
                    datasets: [{
                        data: [65, 15, 15, 5],
                        backgroundColor: [
                            '#0366d6',
                            '#2ea44f',
                            '#f9826c',
                            '#6f42c1'
                        ],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '60%'
                }
            });

            // 粉丝活跃度图
            const fanActivityCtx = document.getElementById('fanActivityChart').getContext('2d');
            new Chart(fanActivityCtx, {
                type: 'radar',
                data: {
                    labels: ['周一', '周二', '周三', '周四', '周五', '周六', '周日'],
                    datasets: [
                        {
                            label: '抖音',
