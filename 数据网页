                    scales: {
                        r: {
                            angleLines: {
                                display: true
                            },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    }
                }
            });

            // 内容分类占比图
            const contentCategoryCtx = document.getElementById('contentCategoryChart').getContext('2d');
            new Chart(contentCategoryCtx, {
                type: 'pie',
                data: {
                    labels: ['教程', '生活', '美食', '旅行', '其他'],
